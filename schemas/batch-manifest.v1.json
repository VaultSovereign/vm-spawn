{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VaultMeshBatchManifestV1",
  "description": "Manifest describing a batch of receipts submitted for anchoring.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "batchId",
    "createdAt",
    "receipts"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "1"
    },
    "batchId": {
      "type": "string",
      "minLength": 8
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "submittedBy": {
      "type": "string",
      "minLength": 1
    },
    "receipts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./receipt.v1.json"
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
